<header class="site-header">
	<h1 class="site-title"><a alt="Home" href="/">Sprachnachrichten</a></h1>
	<nav class="site-navigation">
		<ul class="site-navigation__list">
			{% set navPages = collections.all | eleventyNavigation %}
			{%- for entry in navPages %}
			<li>
				<a class="site-navigation__link {% if entry.url == page.url %}site-navigation__link--active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
			</li>
			{%- endfor %}
		</ul>
	</nav>
	<a class="button button--small site-header__cta" href="/abonnieren">Abonnieren</a>
</header>
